<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="80dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".Activity.DangkyActivity">

    <TextView
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="50dp"
        android:text="Đăng Ký"
        android:textSize="50sp"
        android:id="@+id/textviewdangky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Nhập tên tài khoản"
        android:id="@+id/edittexttentaikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:password="true"
        android:textSize="20sp"
        android:hint="Nhập mật khẩu"
        android:id="@+id/edittextmatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Nhập email"
        android:id="@+id/edittextemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <!--<EditText-->
        <!--android:textSize="20sp"-->
        <!--android:hint="Nhập Dòng nhạc yêu thích"-->
        <!--android:id="@+id/edittextDongnhac"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    <RadioGroup
        android:id="@+id/GroupDongnhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Dòng nhạc yêu thích"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
        android:id="@+id/radiobtPop"
        android:text="Pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radiobtBallad"
            android:text="Ballad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radiobtBolero"
            android:text="Bolero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radiobtKhac"
            android:text="Dòng nhạc khác"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <Button
        android:textSize="20sp"
        android:text="Đăng ký"
        android:id="@+id/btnXacnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:textSize="20sp"
        android:text="Hủy"
        android:id="@+id/btnHuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>