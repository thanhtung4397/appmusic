<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="80dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@drawable/custom_bachgroup"
    tools:context=".Activity.DangkyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="#0138FF"
            android:text="Đăng Ký"
            android:textSize="50sp"
            android:id="@+id/textviewdangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <EditText
        android:textColor="#0138FF"
        android:textColorHint="#0138FF"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:hint="Nhập tên tài khoản"
        android:id="@+id/edittexttentaikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#0138FF"
        android:textColorHint="#0138FF"
        android:layout_marginTop="10dp"
        android:password="true"
        android:textSize="20dp"
        android:hint="Nhập mật khẩu"
        android:id="@+id/edittextmatkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#0138FF"
        android:textColorHint="#0138FF"
        android:hint="Nhập email"
        android:id="@+id/edittextemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <!--<EditText-->
        <!--android:textSize="20sp"-->
        <!--android:hint="Nhập Dòng nhạc yêu thích"-->
        <!--android:id="@+id/edittextDongnhac"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->
    <RadioGroup
        android:layout_marginTop="10dp"
        android:textColor="#0138FF"
        android:id="@+id/GroupDongnhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#0138FF"
            android:text="Dòng nhạc yêu thích"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
        android:id="@+id/radiobtPop"
        android:text="Pop"
            android:textColor="#0138FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <RadioButton
            android:textColor="#0138FF"
            android:id="@+id/radiobtBallad"
            android:text="Ballad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:textColor="#0138FF"
            android:id="@+id/radiobtBolero"
            android:text="Bolero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:textColor="#0138FF"
            android:id="@+id/radiobtKhac"
            android:text="Dòng nhạc khác"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <Button
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="#058546"
        android:textColor="#00E5FF"
        android:text="Đăng ký"
        android:id="@+id/btnXacnhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:background="#058546"
        android:textColor="#00E5FF"
        android:text="Hủy"
        android:id="@+id/btnHuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>