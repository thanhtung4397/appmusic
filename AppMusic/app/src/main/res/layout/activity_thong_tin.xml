<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ThongTinActivity"
    android:background="@drawable/custom_bachgroup">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btn_thoat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/x" />
        <TextView
            android:textColor="#000000"
            android:layout_below="@+id/btn_thoat"
            android:textSize="20sp"
            android:text="Tên:"
            android:id="@+id/txtTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#0138FF"
            android:layout_below="@+id/btn_thoat"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txtTen"
            android:textSize="20sp"
            android:id="@+id/txtTTten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@+id/txtTen"
            android:id="@+id/txtDongnhac"
            android:text="Dòng nhạc:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#0138FF"
            android:layout_below="@+id/txtTen"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txtDongnhac"
            android:textSize="20sp"
            android:id="@+id/txtTTdongnhac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.AppBarLayout
            android:background="#BCD5EB"
            android:layout_marginTop="10dp"
            android:id="@+id/appbarlayout"
            android:layout_below="@id/txtDongnhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarsearchdongnhac"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/appbarlayout"
            android:id="@+id/recyclerViewDongnhac"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:textColor="#0D0DEE"
            android:gravity="center"
            android:textSize="35sp"
            android:visibility="gone"
            android:text="Hệ Thống Chưa Cập Nhật"
            android:id="@+id/textviewchuacapnhat"
            android:layout_below="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>