<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imageviewSearchbaihat"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/textviewSearchTenbaihat"
        android:textSize="18sp"
        android:textColor="#f000"
        android:text="Tên Bài Hát"
        android:layout_toRightOf="@+id/imageviewSearchbaihat"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewSearchTencasi"
        android:textSize="18sp"
        android:textColor="#655f5f"
        android:text="Tên Ca Sĩ"
        android:layout_below="@+id/textviewSearchTenbaihat"
        android:layout_toRightOf="@+id/imageviewSearchbaihat"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewSearchLuotthich"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>