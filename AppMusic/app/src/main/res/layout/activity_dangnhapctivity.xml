<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_bachgroup">
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imageMusic"
            android:layout_centerHorizontal="true"
            android:background="@drawable/music"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <EditText

            android:textColor="#000000"
            android:textColorHint="#101946"
            android:textSize="20dp"
            android:layout_below="@+id/imageMusic"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taikhoan"
            android:hint="Tên đăng nhập"/>
        <EditText
            android:textColor="#000000"
            android:textColorHint="#101946"
            android:textSize="20dp"
            android:layout_below="@+id/taikhoan"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:password="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/matkhau"
            android:hint="Mật khẩu"/>
        <Button
            android:textSize="20dp"
            android:background="#058546"
            android:textColor="#FAF6F6"
            android:layout_below="@+id/matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:id="@+id/btDangnhap"
            android:text="Đăng Nhập"/>
        <Button
            android:textSize="20dp"
            android:background="#058546"
            android:textColor="#FAF6F6"
            android:layout_below="@+id/btDangnhap"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btDangky"
            android:text="Đăng Ký Tài Khoản"/>
    </RelativeLayout>

</LinearLayout>