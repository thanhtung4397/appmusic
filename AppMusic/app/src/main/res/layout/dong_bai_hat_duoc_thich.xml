<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/custom_bachgroup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageviewbaihatduocthich"
        android:scaleType="fitXY"
        android:layout_margin="8dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:text="Tên Bài Hát"
        android:textSize="18sp"
        android:textColor="#0C0C0C"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/imageviewbaihatduocthich"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:id="@+id/textviewtenbaihatduocthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#0E0E0E"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_toRightOf="@+id/imageviewbaihatduocthich"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textviewtenbaihatduocthich"
        android:id="@+id/textviewtencasibaihatduocthich"
        android:text="Tên Ca Sĩ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imagheviewluotthich"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>